<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    android:background="#FFFAF2"
    android:paddingHorizontal="20dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/white_bg"
                android:src="@drawable/arrowback"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="#141414"
                    android:text="Hi, Alex Joe "
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/hiemoji"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <ImageView
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/white_bg"
                android:src="@drawable/cart"
                />

        </LinearLayout>
        <EditText
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/white_bg"
            android:drawableStart="@drawable/searchicon"
            android:layout_marginBottom="20dp"
            android:hint="Search Here..."
            android:drawablePadding="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/white_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Select Payment"
                android:textSize="18dp"
                android:textColor="#141414"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/visa"
                    app:strokeColor="#0000ffff" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/paypal"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:strokeColor="#0000ffff" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/mastercard"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:strokeColor="#0000ffff" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight="1"
                    android:src="@drawable/amex"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:strokeColor="#0000ffff" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginHorizontal="3dp"
            android:src="@drawable/plus_circle"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/signIntxt"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="ADD NEW CARD"
                android:textColor="#419B95"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:background="#419B95"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Card Number"
        android:textSize="18dp"
        android:textColor="#141414"/>
    <EditText
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:background="@drawable/white_bg"
        android:drawableEnd="@drawable/visa"
        android:hint="1234567890123456"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Name"
        android:textSize="18dp"
        android:textColor="#141414"/>
    <EditText
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:background="@drawable/white_bg"
        android:hint="Martin Joseph"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Expiry Date"
                android:textSize="18dp"
                android:textColor="#141414"/>
            <EditText
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:background="@drawable/white_bg"
                android:hint="01/2025"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" CVV"
                android:textSize="18dp"
                android:textColor="#141414"/>
            <EditText
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp"
                android:background="@drawable/white_bg"
                android:hint="134"/>
        </LinearLayout>
    </LinearLayout>









    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:text="Pay Now"
        android:textAllCaps="false"
        android:textSize="16dp" />


</LinearLayout>