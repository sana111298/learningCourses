<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationCode"
    android:background="#FFFAF2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/passicon"
            android:padding="17dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/btn_bg_offwhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a Code"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:textColor="#141414"
            android:textSize="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="We sent a verification Code to"
                    android:textColor="#555555"
                    android:textSize="15dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="your phone number"
                    android:textColor="#555555"
                    android:textSize="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text=" (+22) 123 546..."
                    android:textColor="#419B95"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <EditText
                android:layout_weight="1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_bg_offwhite"
                android:hint="-"
                />
            <EditText
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_offwhite"
                android:hint="-"
                />
            <EditText
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_offwhite"
                android:hint="-"
                />
            <EditText
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_offwhite"
                android:hint="-"
                />



        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_bg"
            android:text="Continue"
            android:textSize="16dp"
            android:layout_marginTop="18dp"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="1dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/signIntxt"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="Resend Code"
                android:textColor="#419B95"
                android:textSize="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:background="#419B95"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>