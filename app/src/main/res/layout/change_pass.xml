<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePass"
    android:background="#FFFAF2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/passicon"
            android:padding="17dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/btn_bg_offwhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textStyle="bold"
            android:layout_marginTop="18dp"
            android:textColor="#141414"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Your password length consists of\n6-characters"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#555555"/>
        <EditText
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_offwhite"
            android:drawableStart="@drawable/eyelock"
            android:hint="New Password"
            android:drawablePadding="15dp"/>
        <EditText
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg_offwhite"
            android:drawableStart="@drawable/eyelock"
            android:hint="Confirm Password"
            android:drawablePadding="15dp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_bg"
            android:text="Continue"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>