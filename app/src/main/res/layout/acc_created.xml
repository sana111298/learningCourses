<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccCreated"
    android:background="#FFFAF2"
    >

        <ImageView
            android:id="@+id/emoji1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emoji3"
            app:layout_constraintBottom_toTopOf="@id/emoji2"
            app:layout_constraintEnd_toStartOf="@id/emoji2"
            app:layout_constraintTop_toTopOf="@id/emoji2"
           />
        <ImageView
            android:id="@+id/emoji2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/emoji1"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/emoji3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/emoji2"
            app:layout_constraintTop_toTopOf="@id/emoji2"
            app:layout_constraintStart_toEndOf="@id/emoji2"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#141414"
        android:gravity="center"
        android:id="@+id/title"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emoji2"
        android:text="Account Created\nSuccessfully!"/>
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:lineHeight="24dp"
        android:text="If you are going to use a passage of\nLorem Ipsum, you need to be sure there\nisn't anything embarrassing."
        android:textColor="#555555"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <Button
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        android:text="Forgot Password"
        android:textSize="16dp"
        android:layout_marginTop="25dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>